# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Local Development (MySQL - Docker)
# DATABASE_URL="mysql://khy_user:khy_password@localhost:3306/kh3-db"

# Development/Testing - GCP Cloud SQL MySQL (Public IP)
DATABASE_URL="mysql://root:YOUR_PASSWORD@35.196.28.206:3306/kh3-db"

# Production - GCP Cloud SQL MySQL (Unix Socket - Recommended for Cloud Run)
# DATABASE_URL="mysql://root:PASSWORD@localhost/kh3-db?socket=/cloudsql/kh3-group:us-central1:kh3group-db"

# Production - GCP Cloud SQL MySQL (Public IP with SSL)
# DATABASE_URL="mysql://root:PASSWORD@35.196.28.206:3306/kh3-db?ssl-mode=REQUIRED"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@khygroup.com"

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend URL (for password reset links, email templates)
FRONTEND_URL="http://localhost:3000"

# CORS Origin (comma-separated for multiple origins)
CORS_ORIGIN="http://localhost:3000"
# Production example:
# CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# ===========================================
# AI PROVIDER CONFIGURATION
# ===========================================
OPENAI_API_KEY="your-openai-api-key"
AI_DEFAULT_PROVIDER="OPENAI"

# Optional: Add other AI providers
# ANTHROPIC_API_KEY="your-anthropic-api-key"
# GEMINI_API_KEY="your-gemini-api-key"

# ===========================================
# GOOGLE CLOUD PLATFORM (GCP) STORAGE
# ===========================================
GCP_PROJECT_ID="your-gcp-project-id"
GCP_STORAGE_BUCKET="your-bucket-name"

# Local Development: Path to service account key file
GCP_SERVICE_ACCOUNT_KEY_PATH="./gcp-service-account-key.json"

# Production (Cloud Run): Use Workload Identity (no key file needed)
# Leave GCP_SERVICE_ACCOUNT_KEY_PATH empty or unset when using Workload Identity

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=4000
NODE_ENV="development"
# Production: NODE_ENV="production"

