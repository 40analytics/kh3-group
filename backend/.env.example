# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Local Development (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/khy_crm?schema=public"

# Production - Google Cloud SQL (Unix Socket)
# DATABASE_URL="postgresql://USER:PASSWORD@/DATABASE?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME"

# Production - Google Cloud SQL (TCP)
# DATABASE_URL="postgresql://USER:PASSWORD@CLOUD_SQL_IP:5432/DATABASE?schema=public"

# Production - External Managed Service (e.g., Supabase, Neon)
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public&sslmode=require"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@khygroup.com"

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend URL (for password reset links, email templates)
FRONTEND_URL="http://localhost:3000"

# CORS Origin (comma-separated for multiple origins)
CORS_ORIGIN="http://localhost:3000"
# Production example:
# CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# ===========================================
# AI PROVIDER CONFIGURATION
# ===========================================
OPENAI_API_KEY="your-openai-api-key"
AI_DEFAULT_PROVIDER="OPENAI"

# Optional: Add other AI providers
# ANTHROPIC_API_KEY="your-anthropic-api-key"
# GEMINI_API_KEY="your-gemini-api-key"

# ===========================================
# GOOGLE CLOUD PLATFORM (GCP) STORAGE
# ===========================================
GCP_PROJECT_ID="your-gcp-project-id"
GCP_STORAGE_BUCKET="your-bucket-name"

# Local Development: Path to service account key file
GCP_SERVICE_ACCOUNT_KEY_PATH="./gcp-service-account-key.json"

# Production (Cloud Run): Use Workload Identity (no key file needed)
# Leave GCP_SERVICE_ACCOUNT_KEY_PATH empty or unset when using Workload Identity

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=4000
NODE_ENV="development"
# Production: NODE_ENV="production"

